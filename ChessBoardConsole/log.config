<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  
  <targets>
    <target name="console" xsi:type="ColoredConsole" layout="${longdate} ${level} ${logger} - ${message}" />
    
    <target name="logFile" xsi:type="File" fileName="debug.log" archiveFileName="debug.{#}.log" archiveEvery="Day" maxArchiveFiles="5" layout="${longdate} ${level} ${logger} - ${message}" />
    
    <target name="infoFile" xsi:type="File" fileName="info.log" archiveFileName="info.{#}.log" archiveEvery="Day" maxArchiveFiles="5" layout="${longdate} ${level} ${logger} - ${message}" />
    
   
  </targets>
  
  <rules>
    
    <logger name="*" minlevel="Trace" writeTo="console" />
    <logger name="*" level="" writeTo="traceFile" />
  </rules>
  
</nlog>
